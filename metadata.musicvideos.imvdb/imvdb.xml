<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<scraper language="en" thumb="icon.png" date="2014-01-11" content="musicvideos" framework="1.1" name="The Internet Music Video Database">
    <CreateSearchUrl dest="3">
        <RegExp dest="3" output="&lt;url&gt;http://imvdb.com/search?search_term=\1&lt;/url&gt;" input="$$4">
            <RegExp dest="4" output="\1" input="$$1">
                <expression clear="yes" noclean="1">^([^-!, ]*)</expression>
            </RegExp>
            <RegExp dest="4+" output="%20\1" input="$$1">
                <expression repeat="yes" noclean="1">[-!, ]([^-!, ]*)</expression>
            </RegExp>
            <expression clear="yes" noclean="1"></expression>
        </RegExp>
    </CreateSearchUrl>
    <GetSearchResults dest="3">
        <RegExp dest="3" output="&lt;?xml version=&quot;1.0&quot; encoding=&quot;UTF-8&quot; standalone=&quot;yes&quot;?&gt;&lt;results sorted=&quot;yes&quot;&gt;\1&lt;/results&gt;" input="$$5">
            <RegExp dest="5" output="&lt;entity&gt;&lt;title&gt;\3 - \2&lt;/title&gt;&lt;url&gt;http://imvdb.com/video/\1&lt;/url&gt;&lt;/entity&gt;" input="$$1">
                <expression clear="yes" repeat="yes" noclean="1">&lt;a href=&quot;http://imvdb.com/video/([^&quot;]*).*?&lt;h5&gt;([^&lt;]*).*?&lt;p style=&quot;margin-bottom: 0!important;&quot;&gt;([^&lt;]*)</expression>
            </RegExp>
            <expression noclean="1"></expression>
        </RegExp>
    </GetSearchResults>
    <GetDetails dest="3">
        <RegExp dest="3" output="&lt;details&gt;\1&lt;/details&gt;" input="$$5">
            <RegExp dest="5" output="&lt;title&gt;\1&lt;/title&gt;" input="$$1">
                <expression noclean="1">&lt;li&gt;&lt;strong&gt;Song Name:&lt;/strong&gt; ([^&lt;]*)&lt;/li&gt;</expression>
            </RegExp>
            <RegExp dest="5+" output="&lt;artist&gt;\1&lt;/artist&gt;" input="$$1">
                <expression noclean="1">&lt;li&gt;&lt;strong&gt;Artist Name:&lt;/strong&gt; &lt;a href=&quot;.*?&gt;([^&lt;]*)&lt;/a&gt;&lt;/li&gt;</expression>
            </RegExp>
            <RegExp dest="5+" output="&lt;year&gt;\1&lt;/year&gt;" input="$$1">
                <expression noclean="1">&lt;a href=&quot;http://imvdb.com/calendar/([^&quot;]*)&quot;&gt;</expression>
            </RegExp>
            <RegExp dest="5+" output="&lt;director&gt;\1&lt;/director&gt;" input="$$6">
                <RegExp dest="6" output=", \1," input="$$1">
                    <expression>Directed by ([^.]*)</expression>
                </RegExp>
                <expression repeat="yes" noclean="1">, ([^,]*)</expression>
            </RegExp>
            <RegExp dest="5+" output="&lt;thumb&gt;\1&lt;/thumb&gt;" input="$$1">
                <expression noclean="1">&lt;link rel=&quot;image_src&quot; href=&quot;([^&quot;]*)</expression>
            </RegExp>
            <RegExp dest="5+" output="&lt;studio&gt;\1&lt;/studio&gt;" input="$$1">
                <expression>&lt;h5&gt;Production Company&lt;/h5&gt;.*?&lt;strong&gt;([^&lt;]*)</expression>
            </RegExp>
            <RegExp dest="5+" output="&lt;genre&gt;\1&lt;/genre&gt;" input="$$1">
                <expression repeat="yes">class=&quot;tag&quot;&gt;([^&lt;]*)</expression>
            </RegExp>
            <RegExp dest="5+" output="&lt;tag&gt;\1&lt;/tag&gt;" input="$$1">
                <expression repeat="yes" noclean="1">&quot;&gt;#([^&lt;]*)</expression>
            </RegExp>
            <expression noclean="1"></expression>
        </RegExp>
    </GetDetails>
</scraper>
